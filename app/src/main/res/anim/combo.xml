<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:fromDegrees="0"
        android:toDegrees="360"
        android:pivotY="50%"
        android:pivotX="50%"
        android:duration="2000" />
    <translate

        android:fromXDelta="-150"
        android:fromYDelta="-200"
        android:toXDelta="0"
        android:toYDelta="0"
        android:duration="2000"
        />
</set>